{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "groupName": "app_platform",
      "matchPackagePrefixes": [
        "doctrine/",
        "symfony/",
        "easycorp/"
      ]
    }
  ],
  "platformAutomerge": true,
  "automergeType": "branch"
}
