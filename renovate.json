{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:automergeEarlyMondays",
    "schedule:weekends",
    ":automergeMinor",
    ":automergeDigest",
    ":automergePr",
    "group:recommended"
  ],
  "packageRules": [
    {
      "groupName": "app_platform",
      "matchPackageNames": [
        "doctrine/{/,}**",
        "symfony/{/,}**",
        "easycorp/{/,}**"
      ]
    }
  ]
}
