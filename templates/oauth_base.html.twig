{% extends '@!EasyAdmin/page/login_minimal.html.twig' %}

{% block body_id %}oauth-page{% endblock %}
{% block body_class %}oauth-page{% endblock %}

{% block head_favicon %}
    {{ include('admin/_includes/favicon.html.twig') }}
{% endblock %}

{% block page_title %}
    {% block oauth_title %}OAuth{% endblock %}
{% endblock %}

{% block wrapper_wrapper %}
    <div class="login-wrapper" style="display: flex; align-items: center; justify-content: center; min-height: 140vh;">
        <div class="login-content" style="text-align: center; max-width: 400px; padding: 2rem;">
            <div class="mb-4">
                {{ include('admin/_includes/logo.html.twig') }}
            </div>
            <div>
                {% block oauth_message %}
                    <h1 class="h3 mb-3">{% block oauth_heading %}OAuth{% endblock %}</h1>
                    <p class="text-muted">{% block oauth_description %}{% endblock %}</p>
                {% endblock %}
            </div>
            <div class="row mt-4">
                <small>
                    <a class="text-muted" href="https://github.com/jeboehm/docker-mailserver">docker-mailserver</a>
                </small>
            </div>
        </div>
    </div>
{% endblock %}
