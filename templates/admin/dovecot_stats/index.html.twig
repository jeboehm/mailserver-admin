{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Dovecot Statistics{% endblock %}
{% block page_title %}Dovecot Statistics{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .dovecot-dashboard {
            max-width: 1400px;
            margin: 0 auto;
        }
        .chart-container {
            position: relative;
            height: 300px;
        }
        .kpi-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .kpi-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .health-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-weight: 500;
        }
        .health-ok {
            background-color: rgba(40, 167, 69, 0.15);
            color: #1e7e34;
        }
        .health-warning {
            background-color: rgba(255, 193, 7, 0.15);
            color: #d39e00;
        }
        .health-critical {
            background-color: rgba(220, 53, 69, 0.15);
            color: #c82333;
        }
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .table-container {
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
{% endblock %}

{% block main %}
    <div class="dovecot-dashboard">
        {% if not isConfigured %}
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fa fa-exclamation-triangle me-2"></i>
                    Doveadm HTTP API Not Configured
                </h5>
                <p class="mb-0">
                    To enable Dovecot statistics, configure the following environment variables:
                </p>
                <ul class="mt-2 mb-0">
                    <li><code>DOVEADM_HTTP_URL</code> - URL to the Doveadm HTTP API (e.g., <code>http://dovecot:8080/doveadm/v1</code>)</li>
                    <li><code>DOVEADM_API_KEY_B64</code> - Base64-encoded API key for authentication</li>
                    <li>Or: <code>DOVEADM_BASIC_USER</code> and <code>DOVEADM_BASIC_PASSWORD</code> for Basic authentication</li>
                </ul>
            </div>
        {% else %}
            {# Summary Fragment #}
            <div id="dovecot-summary" data-fragment-url="{{ path('admin_dovecot_stats_summary_fragment') }}">
                <div class="d-flex justify-content-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>

            {# Charts Fragment #}
            <div id="dovecot-charts" data-fragment-url="{{ path('admin_dovecot_stats_charts_fragment') }}">
                <div class="d-flex justify-content-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading charts...</span>
                    </div>
                </div>
            </div>

            {# Raw Data Fragment #}
            <div id="dovecot-raw" data-fragment-url="{{ path('admin_dovecot_stats_raw_fragment') }}">
                <div class="d-flex justify-content-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading details...</span>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    {% if isConfigured %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Load all fragments
                const fragments = document.querySelectorAll('[data-fragment-url]');
                fragments.forEach(function(container) {
                    const url = container.dataset.fragmentUrl;
                    fetch(url)
                        .then(response => response.text())
                        .then(html => {
                            container.innerHTML = html;
                        })
                        .catch(error => {
                            container.innerHTML = '<div class="alert alert-danger">Failed to load: ' + error.message + '</div>';
                        });
                });

                // Auto-refresh every 30 seconds
                setInterval(function() {
                    const summaryContainer = document.getElementById('dovecot-summary');
                    if (summaryContainer && summaryContainer.dataset.fragmentUrl) {
                        fetch(summaryContainer.dataset.fragmentUrl)
                            .then(response => response.text())
                            .then(html => {
                                summaryContainer.innerHTML = html;
                            });
                    }
                }, 30000);
            });

            function refreshDovecotStats() {
                fetch('{{ path('admin_dovecot_stats_refresh') }}', { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Reload all fragments
                            const fragments = document.querySelectorAll('[data-fragment-url]');
                            fragments.forEach(function(container) {
                                fetch(container.dataset.fragmentUrl)
                                    .then(response => response.text())
                                    .then(html => {
                                        container.innerHTML = html;
                                    });
                            });
                        } else {
                            alert('Refresh failed: ' + data.error);
                        }
                    })
                    .catch(error => {
                        alert('Refresh failed: ' + error.message);
                    });
            }
        </script>
    {% endif %}
{% endblock %}
