{# Summary fragment: Health status and KPI tiles #}

{# Health Status Banner #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <h5 class="card-title mb-1">
                        <i class="fa fa-server me-2"></i>Doveadm HTTP API
                    </h5>
                    <small class="text-muted">
                        {% if lastSampleTime %}
                            Last updated: {{ lastSampleTime|date('Y-m-d H:i:s') }}
                        {% elseif resetDateTime %}
                            Stats since: {{ resetDateTime|date('Y-m-d H:i:s') }}
                        {% else %}
                            No data available yet
                        {% endif %}
                    </small>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <button type="button" class="btn btn-sm btn-outline-primary" data-action="click->dovecot-dashboard#refresh">
                        <i class="fa fa-refresh me-1"></i>Refresh
                    </button>
                    {% include 'admin/dovecot_stats/_health_badge.html.twig' with { health: health } only %}
                </div>
            </div>
        </div>
    </div>
</div>

{# KPI Cards #}
{% if health.isHealthy() and sample %}
    <div class="row g-3 mb-4">
        {# Auth Successes #}
        <div class="col-6 col-md-4 col-lg">
            <div class="card shadow-sm border-0 kpi-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-check-circle fa-2x mb-2 text-success"></i>
                    <div class="h4 mb-0">
                        {% set authSuccesses = sample.getCounterAsInt('auth_successes') %}
                        {% if authSuccesses is not null %}
                            {{ authSuccesses|number_format }}
                        {% else %}
                            n/a
                        {% endif %}
                    </div>
                    <small class="text-muted">Auth Successes</small>
                </div>
            </div>
        </div>

        {# Auth Failures #}
        <div class="col-6 col-md-4 col-lg">
            <div class="card shadow-sm border-0 kpi-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-times-circle fa-2x mb-2 text-danger"></i>
                    <div class="h4 mb-0">
                        {% set authFailures = sample.getCounterAsInt('auth_failures') %}
                        {% if authFailures is not null %}
                            {{ authFailures|number_format }}
                        {% else %}
                            n/a
                        {% endif %}
                    </div>
                    <small class="text-muted">Auth Failures</small>
                </div>
            </div>
        </div>

        {# Indexes #}
        <div class="col-6 col-md-4 col-lg">
            <div class="card shadow-sm border-0 kpi-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-list-ol fa-2x mb-2 text-primary"></i>
                    <div class="h4 mb-0">
                        {% set indexes = sample.getCounterAsInt('imap_command_SELECT') %}
                        {% if indexes is not null %}
                            {{ indexes|number_format }}
                        {% else %}
                            n/a
                        {% endif %}
                    </div>
                    <small class="text-muted">Index Operations</small>
                </div>
            </div>
        </div>
    </div>
{% elseif not health.isHealthy() %}
    {# Error State #}
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="fa fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                    <h4>Unable to load Dovecot statistics</h4>
                    <p class="text-muted mb-4">
                        {{ health.message }}
                    </p>
                    <button type="button" class="btn btn-primary" data-action="click->dovecot-dashboard#refresh">
                        <i class="fa fa-refresh me-2"></i>Retry
                    </button>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="fa fa-info-circle me-2"></i>
        No statistics data available yet. Data will appear after the first successful fetch from the Doveadm API.
    </div>
{% endif %}
