{# Summary fragment: Health status and KPI tiles #}

{# Health Status Card #}
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-3 align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3">
                {# Health Badge #}
                {% if health.status.value == 'ok' %}
                    <span class="badge bg-success fs-6">
                        <i class="fa fa-check-circle me-1"></i>API OK
                    </span>
                {% elseif health.status.value == 'warning' %}
                    <span class="badge bg-warning text-dark fs-6">
                        <i class="fa fa-exclamation-triangle me-1"></i>Warning
                    </span>
                {% else %}
                    <span class="badge bg-danger fs-6">
                        <i class="fa fa-times-circle me-1"></i>Critical
                    </span>
                {% endif %}

                <span class="text-muted">{{ health.message }}</span>
            </div>

            <div class="d-flex align-items-center gap-3">
                {% if lastSampleTime %}
                    <small class="text-muted">
                        <i class="fa fa-clock me-1"></i>
                        Last sample: {{ lastSampleTime|date('H:i:s') }}
                    </small>
                {% endif %}

                {% if resetDateTime %}
                    <small class="text-muted">
                        <i class="fa fa-history me-1"></i>
                        Stats since: {{ resetDateTime|date('Y-m-d H:i') }}
                    </small>
                {% endif %}

                <button type="button" class="btn btn-sm btn-outline-primary" onclick="refreshDovecotStats()">
                    <i class="fa fa-sync-alt me-1"></i>Refresh
                </button>
            </div>
        </div>
    </div>
</div>

{# KPI Tiles #}
{% if sample %}
    <div class="row g-3 mb-4">
        {# Auth Successes #}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="text-muted small mb-1">
                        <i class="fa fa-check me-1"></i>Auth Successes
                    </div>
                    <div class="fs-3 fw-bold text-success">
                        {% set authSuccesses = sample.getCounterAsInt('auth_successes') %}
                        {% if authSuccesses is not null %}
                            {{ authSuccesses|number_format }}
                        {% else %}
                            n/a
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Auth Failures #}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="text-muted small mb-1">
                        <i class="fa fa-times me-1"></i>Auth Failures
                    </div>
                    <div class="fs-3 fw-bold text-danger">
                        {% set authFailures = sample.getCounterAsInt('auth_failures') %}
                        {% if authFailures is not null %}
                            {{ authFailures|number_format }}
                        {% else %}
                            n/a
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Indexes #}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="text-muted small mb-1">
                        <i class="fa fa-list-ol me-1"></i>Indexes
                    </div>
                    <div class="fs-3 fw-bold text-info">
                        {% set indexes = sample.getCounterAsInt('imap_command_SELECT') %}
                        {% if indexes is not null %}
                            {{ indexes|number_format }}
                        {% else %}
                            n/a
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="fa fa-info-circle me-2"></i>
        No statistics data available yet. Data will appear after the first successful fetch from the Doveadm API.
    </div>
{% endif %}
