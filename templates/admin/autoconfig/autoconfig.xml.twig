<clientConfig version="1.1">
    <emailProvider id="{{ mailname }}">
        <domain>{{ mailname }}</domain>
        <displayName>docker-mailserver</displayName>
        <displayShortName>docker-mailserver</displayShortName>
        <incomingServer type="imap">
            <hostname>{{ mailname }}</hostname>
            <port>143</port>
            <socketType>STARTTLS</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILADDRESS%</username>
        </incomingServer>
        <outgoingServer type="smtp">
            <hostname>{{ mailname }}</hostname>
            <port>587</port>
            <socketType>STARTTLS</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILADDRESS%</username>
        </outgoingServer>
    </emailProvider>
</clientConfig>
