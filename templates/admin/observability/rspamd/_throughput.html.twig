{# Throughput chart fragment #}
{% if not embedded|default(false) %}
<div class="card shadow-sm border-0">
    <div class="card-header bg-transparent border-0">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0">
                <i class="fa fa-chart-line me-2"></i>Throughput ({{ type|capitalize }})
            </h6>
            <div class="btn-group" role="group">
                {% for validType in validTypes %}
                    <a href="{{ path('admin_observability_rspamd_throughput', { type: validType }) }}"
                       class="btn btn-outline-secondary btn-sm{% if validType == type %} active{% endif %}">
                        {{ validType|capitalize }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="card-body">
{% endif %}

        <div class="chart-container" style="height: 280px;">
            {% if chart is defined and chart is not null %}
                {{ render_chart(chart) }}
            {% else %}
                <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                    <div class="text-center">
                        <i class="fa fa-chart-line fa-3x mb-3 opacity-50"></i>
                        <p class="mb-0">Loading throughput data...</p>
                    </div>
                </div>
            {% endif %}
        </div>

{% if not embedded|default(false) %}
    </div>
</div>
{% endif %}
